{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "rangeStrategy": "replace",
      "semanticCommitType": "housekeeping"
    },
    {
      "depTypeList": [
        "dependencies"
      ],
      "semanticCommitType": "fix"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "rangeStrategy": "update-lockfile",
      "semanticCommitScope": "dev-deps"
    },
    {
      "depTypeList": [
        "peerDependencies"
      ],
      "rangeStrategy": "widen",
      "semanticCommitScope": "peer-deps"
    },
    {
      "packagePatterns": ["^react"],
      "enabled": false
    }
  ]
}
