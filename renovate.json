{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packagePatterns": [
        "*"
      ],
      "rangeStrategy": "replace"
    },
    {
      "depTypeList": [
        "devDependencies"
      ],
      "rangeStrategy": "update-lockfile"
    },
    {
      "depTypeList": [
        "peerDependencies"
      ],
      "rangeStrategy": "widen"
    },
    {
      "packagePatterns": ["^react"],
      "enabled": false
    }
  ],
  "semanticCommitType": "housekeeping"
}
