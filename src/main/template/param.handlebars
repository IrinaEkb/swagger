<div class="row">
	<div class="col-sm-10">
		<label class="code c-input-label" for="textInput">{{name}}</label>
		<input class="c-input-field t-item-name" type="text" id="textInput" />
	</div>
</div>
{{#if isBody}}
	<div class="row">
		<div class="col-sm-10">
			{{#if isFile}}
				<label class="code c-input-label" for="textInput">{{name}}</label>
				<input class="c-input-field t-item-name" type="text" id="textInput" />
			{{else}}
				{{#if defaultValue}}
					<textarea class='body-textarea' name='{{name}}'>{{defaultValue}}</textarea>
				{{else}}
					<textarea class='body-textarea' name='{{name}}'></textarea>
					<br />
					<div class="parameter-content-type" />
				{{/if}}
			{{/if}}
		</div>
	</div>
{{else}}
	<div class="row">
		<div class="col-sm-6">
			{{#if defaultValue}}
				<input class="c-input-text parameter" minlength='0' name='{{name}}' placeholder='' type='text' value='{{defaultValue}}'/>
			{{else}}
				<input class="c-input-text parameter" minlength='0' name='{{name}}' placeholder='' type='text' value=''/>
			{{/if}}
		</div>
	</div>
{{/if}}
<div class="row">
	<div class="col-ms-10">
		<p>{{{description}}}</p>
		<p>{{{paramType}}}</p>
		{{#if isBody}}
			<span class='model-signature'></span>
		{{else}}
			<span class='data-type'></span>
		{{/if}}
	</div>
</div>

